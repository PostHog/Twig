{
  "name": "@posthog/agent",
  "version": "2.0.0",
  "repository": "https://github.com/PostHog/twig",
  "description": "TypeScript agent framework wrapping Claude Agent SDK with Git-based task execution for PostHog",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./agent": {
      "types": "./dist/agent.d.ts",
      "import": "./dist/agent.js"
    },
    "./gateway-models": {
      "types": "./dist/gateway-models.d.ts",
      "import": "./dist/gateway-models.js"
    },
    "./posthog-api": {
      "types": "./dist/posthog-api.d.ts",
      "import": "./dist/posthog-api.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./utils/gateway": {
      "types": "./dist/utils/gateway.d.ts",
      "import": "./dist/utils/gateway.js"
    },
    "./worktree-manager": {
      "types": "./dist/worktree-manager.d.ts",
      "import": "./dist/worktree-manager.js"
    },
    "./adapters/claude/question-utils": {
      "types": "./dist/adapters/claude/question-utils.d.ts",
      "import": "./dist/adapters/claude/question-utils.js"
    },
    "./adapters/claude/permission-options": {
      "types": "./dist/adapters/claude/permission-options.d.ts",
      "import": "./dist/adapters/claude/permission-options.js"
    }
  },
  "type": "module",
  "keywords": [
    "posthog",
    "claude",
    "agent",
    "ai",
    "git",
    "typescript"
  ],
  "author": "PostHog",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "pnpm exec tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@types/bun": "latest",
    "@types/tar": "^6.1.13",
    "minimatch": "^10.0.3",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@posthog/shared": "workspace:*",
    "@agentclientprotocol/sdk": "^0.13.1",
    "@anthropic-ai/claude-agent-sdk": "0.2.12",
    "@anthropic-ai/sdk": "^0.71.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "diff": "^8.0.2",
    "dotenv": "^17.2.3",
    "tar": "^7.5.0",
    "uuid": "13.0.0",
    "yoga-wasm-web": "^0.3.3",
    "zod": "^3.24.1"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "CLAUDE.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
