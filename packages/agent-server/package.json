{
  "name": "@posthog/agent-server",
  "version": "1.0.0",
  "repository": "https://github.com/PostHog/twig",
  "description": "Cloud agent server for PostHog Tasks - runs in sandbox and communicates via SSE/HTTP",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "agent-server": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "type": "module",
  "keywords": [
    "posthog",
    "agent",
    "server",
    "cloud",
    "sandbox"
  ],
  "author": "PostHog",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "pnpm exec tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.16.0",
    "tsup": "^8.5.1",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.5.1",
    "@posthog/agent": "workspace:*"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
