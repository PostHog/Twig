{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@twig/core": ["../../packages/core/src/index.ts"],
      "@twig/core/engine": ["../../packages/core/src/engine/index.ts"],
      "@twig/core/jj": ["../../packages/core/src/jj/index.ts"],
      "@twig/core/stacks": ["../../packages/core/src/stacks/index.ts"],
      "@twig/core/*": ["../../packages/core/src/*.ts"]
    }
  },
  "include": ["src/**/*", "bin/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
